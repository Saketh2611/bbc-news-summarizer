{
  "version": 2,
  "name": "bbc-news-summarizer",
  "builds": [
    {
      "src": "main_bbc.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "300mb",
        "runtime": "python3.10"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main_bbc.py"
    }
  ]
}
